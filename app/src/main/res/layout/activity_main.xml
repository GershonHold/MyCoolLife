<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="cn.bluemobi.server.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_set"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginLeft="40dp"
                    android:drawableLeft="@mipmap/home_question_mark"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="设置锻炼计划"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/tv_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginLeft="40dp"
                    android:drawableLeft="@mipmap/home_statistical"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="查看历史步数"
                    android:textColor="#333333" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:gravity="center_horizontal">

                <cn.bluemobi.step.view.StepArcView
                    android:id="@+id/cc"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="50dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tv_isSupport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="该设备支持计步"
                    android:textColor="#333333" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/check_history_steps"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="查看历史步数"
                    android:textColor="#3E3C3C" />

            </TableRow>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
